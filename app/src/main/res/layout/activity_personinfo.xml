<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_titleBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_backward"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:ellipsize="none"
            android:src="@drawable/ic_baseline_arrow_back_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_horizontal|center"
            android:text="个人资料"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/WhiteSmoke" />

    <!--头像-->
    <LinearLayout
        android:id="@+id/layout_portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="头像" />

        <com.example.myapplication.widget.RoundImageView
            android:id="@+id/ri_portrait"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="250dp"
            android:src="@drawable/ic_baseline_account_circle_24" />

        <ImageView
            android:id="@+id/iv_portrait_arrowRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/WhiteSmoke" />

    <!--姓名-->
    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/WhiteSmoke"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="姓名" />

        <TextView
            android:id="@+id/tv_name_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp"
            android:textColor="@color/TextColor"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry"
            tools:text="text" />

        <!--点击跳转或者弹出选择框-->
        <ImageView
            android:id="@+id/iv_arrow_right_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/WhiteSmoke" />

    <!--学号-->
    <LinearLayout
        android:id="@+id/layout_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/WhiteSmoke"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="学号" />

        <TextView
            android:id="@+id/tv_id_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp"
            android:textColor="@color/TextColor"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry"
            tools:text="text" />

        <ImageView
            android:id="@+id/iv_arrow_right_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/WhiteSmoke" />

    <!--学校-->
    <LinearLayout
        android:id="@+id/layout_school"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/WhiteSmoke"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="学校" />

        <TextView
            android:id="@+id/tv_school_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp"
            android:textColor="@color/TextColor"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry"
            tools:text="text" />

        <ImageView
            android:id="@+id/iv_arrow_right_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/WhiteSmoke" />

    <!--身份-->
    <LinearLayout
        android:id="@+id/layout_identity"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/WhiteSmoke"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="身份" />

        <TextView
            android:id="@+id/tv_identity_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp"
            android:textColor="@color/TextColor"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry"
            tools:text="text" />

        <ImageView
            android:id="@+id/iv_arrow_right_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/WhiteSmoke" />

    <!--年级-->
    <LinearLayout
        android:id="@+id/layout_grade"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/WhiteSmoke"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="年级" />

        <TextView
            android:id="@+id/tv_grade_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp"
            android:textColor="@color/TextColor"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry"
            tools:text="text" />

        <ImageView
            android:id="@+id/iv_arrow_right_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/WhiteSmoke" />

    <!--班级-->
    <LinearLayout
        android:id="@+id/layout_class"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/WhiteSmoke"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="班级" />

        <TextView
            android:id="@+id/tv_class_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp"
            android:textColor="@color/TextColor"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry"
            tools:text="text" />

        <ImageView
            android:id="@+id/iv_arrow_right_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/WhiteSmoke" />

    <!--入学时间-->
    <LinearLayout
        android:id="@+id/layout_enrollment_time"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/WhiteSmoke"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_enrollment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="入学时间" />

        <TextView
            android:id="@+id/tv_enrollment_time_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp"
            android:textColor="@color/TextColor"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry"
            tools:text="text" />

        <ImageView
            android:id="@+id/iv_arrow_right_enrollment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/WhiteSmoke" />

    <!--院系-->
    <LinearLayout
        android:id="@+id/layout_department"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/WhiteSmoke"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="院系" />

        <TextView
            android:id="@+id/tv_department_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp"
            android:textColor="@color/TextColor"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry"
            tools:text="text" />

        <ImageView
            android:id="@+id/iv_arrow_right_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/WhiteSmoke" />

    <!--专业-->
    <LinearLayout
        android:id="@+id/layout_major"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/WhiteSmoke"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="专业" />

        <TextView
            android:id="@+id/tv_major_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp"
            android:textColor="@color/TextColor"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry"
            tools:text="text" />

        <ImageView
            android:id="@+id/iv_arrow_right_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/WhiteSmoke" />

    <!--退出按钮-->
    <Button
        android:id="@+id/login_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="100dp"
        android:text="@string/login_exit"
        android:textColor="@color/black" />

</LinearLayout>